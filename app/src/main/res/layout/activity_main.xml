<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Título de la aplicación -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainActivity — Ciclo de vida"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contador de instancia -->
    <TextView
        android:id="@+id/textViewInstanceCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Instancia #0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <!-- Botón Recrear (llama a recreate()) -->
    <Button
        android:id="@+id/buttonRecreate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recrear"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonClearLog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInstanceCounter"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Botón Limpiar (borra el log en pantalla) -->
    <Button
        android:id="@+id/buttonClearLog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonRecreate"
        app:layout_constraintTop_toBottomOf="@+id/textViewInstanceCounter"
        app:layout_constraintHorizontal_weight="1" />

    <!-- ScrollView para el Log de eventos -->
    <ScrollView
        android:id="@+id/scrollViewLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="#F0F0F0"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRecreate">

        <!-- TextView para el contenido del log -->
        <TextView
            android:id="@+id/textViewLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#333333"
            android:textSize="12sp"
            tools:text="Log inicial:\n" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
